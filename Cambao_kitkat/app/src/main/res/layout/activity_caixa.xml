<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Caixa">
    <ImageButton
        android:id="@+id/caixa_caixa"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/box" />

    <ImageButton
        android:id="@+id/caminhao_caixa"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/truck" />

    <ImageButton
        android:id="@+id/contato_caixa"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/phone" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="411dp"
        android:layout_height="456dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625">

        <GridLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton15"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                app:srcCompat="@drawable/caixa" />

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/caixa" />

            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/caixa" />

            <TextView
                android:id="@+id/empresa1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#589A9696"
                android:fontFamily="sans-serif-condensed"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textColor="#494444"
                android:textSize="32sp" />

        </GridLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="249dp"
        android:layout_height="49dp"
        android:text="Recomendacoes"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.669" />

</androidx.constraintlayout.widget.ConstraintLayout>